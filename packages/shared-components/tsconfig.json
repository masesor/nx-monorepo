{
  "extends": "../../tsconfig.base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "outDir": "./dist",
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "."
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts"]
}